<script>
  $(document).ready( function () {
    // Scroll to Pes Game Title
    let dataTable = $('#userList').DataTable({
      pageLength: 100,
      order: [[ 1, 'asc' ]]
    });

    dataTable.on( 'order.dt search.dt', function () {
       dataTable.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
           cell.innerHTML = i+1;
       } );
   } ).draw();
  })
</script>