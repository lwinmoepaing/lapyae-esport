<% layout('../template/lapyae') -%>

<div class='blogImage' style='background-image: url(<%= ogImage %>) '>
</div>

<div class="container py-4">
    <h3 class="py-2 mb-4">
        <%= title %>
    </h3>

    <p>
        <%= description %>
    </p>

    <% if (blog) { %>
        <% if (blog.content_one) { %>
          <p><%= blog.content_one %></p>
        <% } %>
    
        <% if (blog.content_two) { %>
          <p><%= blog.content_two %></p>
        <% } %>
        <div class="fb-share-button"  data-href="<%= url %>" data-layout="button_count">
        </div>
    <% } %>

    <a href="/"> ပင်မ စာမျက်နှာ သို့ </a>
    
</div>

<!-- Load Facebook SDK for JavaScript -->
<script>(function(d, s, id) {
var js, fjs = d.getElementsByTagName(s)[0];
if (d.getElementById(id)) return;
js = d.createElement(s); js.id = id;
js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

